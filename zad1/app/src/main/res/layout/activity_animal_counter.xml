<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AnimalCounterActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/middleGuideline"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintGuide_percent="0.5"
        android:orientation="vertical">
    </androidx.constraintlayout.widget.Guideline>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/leftGuideline"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintGuide_begin="16dp"
        android:orientation="vertical">
    </androidx.constraintlayout.widget.Guideline>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rightGuideline"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintGuide_end="16dp"
        android:orientation="vertical">
    </androidx.constraintlayout.widget.Guideline>

    <TextView
        android:id="@+id/numberOfBirdsTV"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:textSize="50dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/leftGuideline"
        app:layout_constraintRight_toRightOf="@id/rightGuideline"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/redButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Red"
        android:textColor="@color/black"
        android:backgroundTint="@color/red"
        app:layout_constraintTop_toBottomOf="@id/numberOfBirdsTV"
        app:layout_constraintRight_toLeftOf="@id/middleGuideline"
        app:layout_constraintLeft_toLeftOf="@id/leftGuideline"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/yellowButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Yellow"
        android:textColor="@color/black"
        android:backgroundTint="@color/yellow"
        app:layout_constraintTop_toBottomOf="@id/numberOfBirdsTV"
        app:layout_constraintRight_toRightOf="@id/rightGuideline"
        app:layout_constraintLeft_toRightOf="@id/middleGuideline"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/greenButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Green"
        android:textColor="@color/black"
        android:backgroundTint="@color/green"
        app:layout_constraintTop_toBottomOf="@id/redButton"
        app:layout_constraintRight_toLeftOf="@id/middleGuideline"
        app:layout_constraintLeft_toLeftOf="@id/leftGuideline"
        android:layout_marginTop="30dp"  />

    <Button
        android:id="@+id/blueButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Blue"
        android:textColor="@color/black"
        android:backgroundTint="@color/blue"
        app:layout_constraintTop_toBottomOf="@id/yellowButton"
        app:layout_constraintRight_toRightOf="@id/rightGuideline"
        app:layout_constraintLeft_toRightOf="@id/middleGuideline"
        android:layout_marginTop="30dp" />

    <Button
        android:id="@+id/resetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Reset"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@id/rightGuideline"
        app:layout_constraintLeft_toLeftOf="@id/leftGuideline"
        android:layout_marginBottom="40dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>